<?xml version="1.0" encoding="utf-8"?>
<image displayname="openSUSE_Leap_42.1_KDE_Live" name="openSUSE-Leap-42.1-LiveDVD-KDE" schemaversion="6.2">
    <description type="system">
        <author>Marcus Sch√§fer</author>
        <contact>ms@suse.com</contact>
        <specification>openSUSE Leap 42.1 Live system</specification>
    </description>
    <preferences>
        <type boot="isoboot/suse-leap42.1" bootkernel="std" bootprofile="default" editbootconfig="isopatch.sh" filesystem="ext4" firmware="efi" flags="overlay" hybrid="true" hybridpersistent="true" image="iso" kernelcmdline="splash" primary="true" volid="openSUSE Leap 42.1 KDE Live" />
        <version>1.42.1</version>
        <packagemanager>zypper</packagemanager>
        <locale>pt_BR</locale>
        <keytable>br-abnt2.map.gz</keytable>
        <timezone>Brazil/East</timezone>
        <hwclock>localtime</hwclock>
        <rpm-excludedocs>false</rpm-excludedocs>
        <rpm-check-signatures>false</rpm-check-signatures>
        <rpm-force>false</rpm-force>
        <bootsplash-theme>openSUSE</bootsplash-theme>
        <bootloader-theme>openSUSE</bootloader-theme>
    </preferences>
    <users group="root">
        <user home="/root" name="root" password="" />
    </users>
    <!--openSUSE-Leap-Oss-->
    <repository type="yast2">
        <!--<source path="obs://leap/42.1/repo/oss"/>-->
        <source path="http://download.opensuse.org/distribution/leap/42.1/repo/oss/"/>
    </repository>
    <!--<repository type="rpm-md">
        <source path="http://download.opensuse.org/repositories/openSUSE:/42.1:/Live/standard/"/>
    </repository>-->
    <repository type='rpm-md'>
        <source path='http://download.opensuse.org/repositories/home:kamarada:Playground:Live/openSUSE_Leap_42.1/'/>
    </repository>
    <packages patternType="onlyRequired" type="image">
        <package name="gfxboot-branding-openSUSE" bootinclude="true" bootdelete="true"/>
        <package name="grub2-branding-openSUSE" bootinclude="true"/>
        <package name="plymouth-branding-openSUSE" bootinclude="true"/>
        <!-- workaround for bnc#892087 -->
        <package name="e2fsprogs" bootinclude="true"/>
        <package name="yast2-live-installer"/>
        <package name="pam"/>
        <package name="pam-config"/>
        <package name="pam-modules"/>
        <package name="udev"/>
        <package name="aaa_base"/>
        <package name="tar"/>
        <package name="patch"/>
        <package name="zypper"/>
        <package name="package-lists-Kamarada-KDE-DVD"/>
    </packages>
    <packages type="bootstrap">
        <package name="branding-openSUSE"/>
        <package name="ca-certificates"/>
        <package name="cracklib-dict-full"/>
        <package name="filesystem"/>
        <package name="glibc-locale"/>
<!--
        The installation of products in SLE12 requires the SLE12 zypper
        Thus the following definition only works when building on SLE12

        <product name="openSUSE"/>

        In order to stay compatible we just install the product rpm
        package. It's required to install the release package in the
        bootstrap phase in order to avoid the installation of an auto
        selected dummy-release package which later conflicts with all
        other release packages
-->
        <package name="openSUSE-release"/>
        <package name="udev"/>
    </packages>
    <packages type="delete">
        <package name="kernel-debug"/>
    </packages>
</image>
